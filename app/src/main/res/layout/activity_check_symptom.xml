<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.as9221.kmeancluster.CheckSymptomActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="379dp"
        android:layout_height="378dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/take_tb_test" />

    <Button
        android:id="@+id/buttonCheckTBPatient"
        style="@style/ButtonStyle1"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="1dp"
        android:text="Check Symptom by Patient"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"></Button>

    <Button
        android:id="@+id/buttonCheckTBProfessional"
        style="@style/ButtonStyle1"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="0dp"
        android:text="Check Symptom by Professional"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCheckTBPatient"></Button>

</android.support.constraint.ConstraintLayout>
